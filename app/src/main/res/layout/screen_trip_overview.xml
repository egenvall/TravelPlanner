<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/search_bg">
    <View
        android:id="@+id/tripoverview_bgholder"
        android:layout_width="384dp"
        android:layout_height="64dp"
        android:background="@color/material_primary_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageButton
        android:id="@+id/trip_back_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_keyboard_backspace_white_24dp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@+id/tripoverview_bgholder"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tripoverview_bgholder"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tripoverview_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/trip_results"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textColor="@color/material_text_icons"
        android:textColorHint="@color/material_text_icons"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@id/trip_back_button"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/trip_back_button"
        app:layout_constraintBottom_toBottomOf="@id/trip_back_button" />

    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/tripoverview_bgholder"
        android:id="@+id/tripoverview_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>



</android.support.constraint.ConstraintLayout>